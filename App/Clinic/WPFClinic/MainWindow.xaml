<Window x:Class="WPFClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="PowderBlue" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Name="btnPatients" Command="{Binding LoginPatients, UpdateSourceTrigger=PropertyChanged}" Content="Patients" HorizontalAlignment="Left" Margin="49,152,0,0" VerticalAlignment="Top" Width="114" Height="72"/>
        <Button Name="btnMedicalStaff" Command="{Binding LoginMedicalStaff, UpdateSourceTrigger=PropertyChanged}" Content="Medical Staff" HorizontalAlignment="Left" Margin="211,152,0,0" VerticalAlignment="Top" Width="110" Height="72"/>
        <Button Name="btnManagement" Command="{Binding LoginManagement, UpdateSourceTrigger=PropertyChanged}" Content="Management" HorizontalAlignment="Left" Margin="365,152,0,0" VerticalAlignment="Top" Width="105" Height="72"/>
        <Label x:Name="label" Content="Welcome to Clinical Centre" HorizontalAlignment="Left" Margin="124,64,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>

    </Grid>
</Window>
