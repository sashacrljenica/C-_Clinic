<Window x:Class="WPFClinic.View.PatientChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClinic.View"
        mc:Ignorable="d"
        Title="Patient Choice" Height="350" Width="600" Background="PowderBlue" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnChoiceMedicalDepartment" Content="View Medical Department" 
                Command="{Binding MedicalDepartment, UpdateSourceTrigger=PropertyChanged}"
                HorizontalAlignment="Left" Margin="70,122,0,0" VerticalAlignment="Top" Width="189" Height="76" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="btnChoiceDoctorAppointment" Content="Doctor Appointment" 
                Command="{Binding DoctorAppointment, UpdateSourceTrigger=PropertyChanged}"
                HorizontalAlignment="Left" Margin="344,122,0,0" VerticalAlignment="Top" Width="186" Height="76" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>
